<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlAddTag"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <include
        android:id="@+id/HeaderBar"
        layout="@layout/header">
    </include>
	<!-- TODO Don't use hard-coded number for marginBottom -->
    <ScrollView
        android:id="@+id/svAddTags"
        style="@style/WizardLayout"
        android:layout_below="@id/HeaderBar"
        android:layout_marginBottom="50dp"
        android:background="@drawable/list_item_gradient">
        <RelativeLayout
            android:id="@+id/rlAddTagScrollableContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout 
                android:id="@+id/ll1"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
                android:layout_alignParentTop="true">
			    <ImageButton
			        android:id="@+id/bNewTag"
			        style="@style/BaseView"
			        android:src="@drawable/btn_plus_fsm"
			        android:layout_width="50dp"
			        android:layout_height="50dp"
			        android:background="#44FFFFFF"
			        android:layout_alignParentRight="true"
			        android:layout_centerHorizontal="true">
			    </ImageButton>
			    <EditText 
	                android:id="@+id/etManualTag"
	                style="@style/BaseView"
		            android:layout_width="fill_parent"
			        android:layout_centerHorizontal="true"
			        android:layout_alignParentLeft="true"
			        android:layout_toLeftOf="@id/bNewTag"
	                android:hint="@string/etManualTag">
	            </EditText>
		    </RelativeLayout>
		    <TextView
		        android:id="@+id/tvAddAutoTag"
		        style="@style/BaseView"
		        android:layout_below="@id/ll1"
		        android:layout_marginBottom="5dp"
		        android:textColor="#000000"
		        android:text="@string/tvAddAutoTag">
		    </TextView>
		    <TextView
		        android:id="@+id/tvAddManualTag"
		        style="@style/BaseView"
		        android:layout_below="@id/tvAddAutoTag"
		        android:layout_marginBottom="5dp"
		        android:textColor="#000000"
		        android:text="@string/tvAddManualTag">
		    </TextView>
	    </RelativeLayout>
	</ScrollView>
    <include
        android:id="@+id/NavButtons"
        layout="@layout/add_nav_buttons"
        android:layout_marginTop="-50dp"
        android:layout_alignParentBottom="true">
    </include>
</RelativeLayout> 
